<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/kotak_event"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:id="@+id/tv_nomor"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" | "
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"
            />
        <TextView
            android:id="@+id/tv_nama"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamar Tipe A"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"
            />




        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button_hapus"
            android:background="@drawable/ic_delete"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_gambar"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single Bed"
                    android:id="@+id/tv_jenis"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppinssemibold"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_date"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Mei 2023 "
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:id="@+id/tv_checkin"
                    android:fontFamily="@font/poppinsregular"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= " - "
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppinsregular"
                    />
                <TextView
                    android:id="@+id/tv_checkout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 Mei 2023 "
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppinsregular"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/ic_durasi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 Bulan "
                    android:id="@+id/tv_durasi"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppinsregular"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Harga kamar"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppinsregular"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. 1500000"
                    android:textColor="#407BFF"
                    android:textSize="15sp"
                    android:id="@+id/tv_harga"
                    android:fontFamily="@font/poppinsbold"/>
                </LinearLayout>

                <Button
                    android:layout_gravity="end"
                    android:padding="5dp"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:id="@+id/detail"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_but"
                    android:text="Detail"/>
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

</LinearLayout>