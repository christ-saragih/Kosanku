<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:background="#407BFF"

                    >


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Pemesanan Anda"
                            android:textColor="@color/white"
                            android:textSize="17sp"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppinsmedium"
                            />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/kotak_event"
                        >



                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <com.makeramen.roundedimageview.RoundedImageView
                                android:id="@+id/iv_gambar"
                                android:layout_width="110dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ic_launcher_background"
                                app:riv_corner_radius="10dp"
                                android:scaleType="centerCrop"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="20"
                                        android:id="@+id/tv_nomor"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppinsbold"
                                        />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" | "
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppinsbold"
                                        />
                                    <TextView
                                        android:id="@+id/tv_nama"
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Kamar Tipe A"
                                        android:textColor="@color/black"
                                        android:textSize="14sp"
                                        android:fontFamily="@font/poppinsbold"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_bed2"
                                        />


                                    <TextView
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Single Bed"
                                        android:id="@+id/tv_jenis"
                                        android:textColor="@color/black"
                                        android:textSize="13sp"
                                        android:fontFamily="@font/poppinssemibold"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:background="@drawable/ic_gender"
                                        />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Pria"
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/tv_kategori"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/poppinssemibold"
                                    />
                                </LinearLayout>






                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Rp. 500000"
                                        android:textColor="@color/black"
                                        android:textSize="17sp"
                                        android:id="@+id/tv_harga"
                                        android:fontFamily="@font/poppinsbold"/>

                                </LinearLayout>




                            </LinearLayout>



                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/kotak_event"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tanggal yand dipilih"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppinssemibold"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Check In"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Check In"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:id="@+id/tv_checkin"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppinssemibold"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Check Out"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Check In"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:id="@+id/tv_checkout"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppinssemibold"
                                />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/kotak_event"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Pembayaran"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="@font/poppinssemibold"
                            />
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Durasi"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="2 Bulan"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:id="@+id/tv_durasi"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppinssemibold"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total "
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppinsregular"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Rp 10000000"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:id="@+id/tv_total"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:fontFamily="@font/poppinssemibold"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout

                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <Button
                                    android:padding="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAllCaps="false"
                                    android:id="@+id/cancel"

                                    android:layout_marginRight="10dp"
                                    android:textColor="#408bff"
                                    android:background="@drawable/bg_cancel"
                                    android:text="Cancel"/>

                                <Button
                                    android:padding="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textAllCaps="false"
                                    android:id="@+id/pesan"
                                    android:layout_marginLeft="10dp"
                                    android:textColor="@color/white"
                                    android:background="@drawable/bg_button"
                                    android:text="Lanjutkan"/>
                            </LinearLayout>

                        </RelativeLayout>
                    </LinearLayout>




                </LinearLayout>






            </LinearLayout>
        </ScrollView>
    </LinearLayout>

